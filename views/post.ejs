<%- include header %>
<div id="page-wrapper">
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">
					<%-title%>
				</h1>
				<ol class="breadcrumb">
					<li>
						<i class="fa fa-dashboard"></i>  <a href="/">Dashboard</a>
					</li>
					<li class="active">
						<i class="fa fa-edit"></i> <%-title%>
					</li>
				</ol>
			</div>
		</div>
        <!-- /.row -->

        <div class="row">
            <div class="col-lg-12">
			<% if(success) { %>
			  <div class="alert alert-info alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <i class="fa fa-info-circle"></i>  <strong><%= success %></strong> Try out for additional features!
              </div>
			<% } %>
			<% if(error) { %>
				<div class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <i class="fa fa-info-circle"></i>  <strong><%= error %></strong> Try out for additional features!
              </div>
			<% } %>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
			<div class="col-lg-12">
				<!-- /#page-wrapper -->
				<form method="post">
				  <div class="form-group">
					<label>标题：</label>
					<input type="text" class="form-control" id="title"  name="title" autofocus="autofocus" maxlength="50">
				  </div>
				  <div class="form-group">
					<label>正文：</label>
					<textarea class="form-control" rows="5" name="post"></textarea>
				  </div>
				  <div class="form-group">
					<button type="submit" class="btn btn-success"> 发 表 </button>
				  </div>
				</form>
			</div>
        </div>
        <!-- /.row -->
        
    </div>
    
</div>

<%- include footer %>